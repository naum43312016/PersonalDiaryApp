@model SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<div class="login-form">
    <form asp-controller="auth" asp-action="UserSignIn" method="post">
        <div class="avatar"><i class="material-icons">&#xE7FF;</i></div>
        <h4 class="modal-title">Login to Your Account</h4>
        <div class="form-group">
            <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password" required="required">
        </div>
        <div class="form-group small clearfix">

            <a href="#" class="forgot-link">Forgot Password?</a>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login">
    </form>
    <div class="text-center small">Don't have an account? <a asp-controller="auth" asp-action="SignUp">Sign up</a></div>
</div>
